{
  "name": "mytradingjournal",
  "type": "module",
  "version": "0.3.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "vercel-build": "prisma generate && next build",
    "postinstall": "prisma generate",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "pretest": "prisma migrate deploy && prisma generate",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:focus": "node scripts/focus-walk-check.mjs",
    "test:a11y": "vitest run tests/accessibility-*.test.tsx",
    "test:coverage": "vitest run --coverage",
    "test:coverage:a11y": "vitest run tests/accessibility-*.test.tsx --coverage",
    "coverage:baseline": "node scripts/coverage-baseline.mjs update",
    "coverage:diff": "node scripts/coverage-baseline.mjs diff",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "seed": "node --env-file=.env.local scripts/seed.mjs",
    "purge:trades": "node --env-file=.env.local scripts/purge-soft-deleted-trades.mjs",
    "design:audit": "node scripts/contrast-audit.mjs",
    "design:audit:update": "set CONTRAST_UPDATE_BASELINE=1&& node scripts/contrast-audit.mjs",
    "audit:lighthouse": "node scripts/lighthouse-audit.mjs",
    "audit:accessibility": "node scripts/axe-audit.mjs",
    "audit:accessibility:update": "set AXE_UPDATE_BASELINE=1&& node scripts/axe-audit.mjs",
    "audit:gate": "node scripts/audit-gate.mjs",
    "audit:motion": "node scripts/reduced-motion-audit.mjs",
    "audit:prep": "playwright install --with-deps",
    "audit:ci": "npm run audit:prep && node scripts/ci-audit.mjs",
    "test:visual": "playwright test -c playwright.config.mjs",
    "test:visual:update": "playwright test -c playwright.config.mjs --update-snapshots",
    "guard:flags": "node scripts/guard-deprecated-flags.mjs",
    "backup:verify": "node scripts/backup-verify.mjs",
    "cron:test": "node scripts/cron-test.mjs"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.15.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.542.0",
    "next": "^15.5.2",
    "next-auth": "^4.24.7",
    "pino": "^9.9.0",
    "pngjs": "^7.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "recharts": "^3.1.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "xlsx": "^0.18.5",
    "zod": "^4.1.5",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^24.3.0",
    "@types/pngjs": "^6.0.5",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitest/ui": "^2.1.4",
    "autoprefixer": "^10.4.20",
    "axe-core": "^4.10.3",
    "eslint": "^9.34.0",
    "eslint-config-next": "^15.5.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "jsdom": "^25.0.0",
    "lighthouse": "^12.0.0",
    "pino-pretty": "^11.3.0",
    "playwright": "^1.47.0",
    "postcss": "^8.4.41",
    "prisma": "^6.15.0",
    "shadcn": "^3.2.1",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.13.0",
    "vitest": "^2.1.4",
    "whatwg-fetch": "^3.6.20"
  }
}

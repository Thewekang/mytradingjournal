########################################
# Environment Example (.env/.env.local)
########################################

# Core
NODE_ENV=development
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://trader:journal123@wekang.synology.me:54320/tradejournal?schema=public"

# NextAuth
NEXTAUTH_SECRET="replace-with-strong-secret"
NEXTAUTH_URL="http://localhost:3000"

# (Optional) OAuth providers keys here

# Feature Flags
# Persistent export subsystem (async export jobs)
ENABLE_EXPORTS="0"
# PDF dashboard export (requires Playwright install)
ENABLE_PDF_EXPORT="0"
# FX conversion (ECB/Frankfurter); 0 by default
ENABLE_FX_CONVERSION="0"

# Ops & Security
CRON_SECRET="replace-with-strong-secret"
# Security headers: enable CSP in next.config via env flag
ENABLE_CSP="0"
# API rate limiting (Edge middleware)
ENABLE_RATE_LIMIT="0"
RATE_LIMIT_WINDOW_MS="60000"
RATE_LIMIT_MAX="120"

# Observability (placeholders)
SENTRY_DSN=""
OTEL_EXPORTER_OTLP_ENDPOINT=""

# Preview/CI (configure in GitHub/Vercel secrets, not here)
# VERCEL_TOKEN=
# VERCEL_ORG_ID=
# VERCEL_PROJECT_ID=
